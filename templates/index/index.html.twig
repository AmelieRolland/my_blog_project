{% extends 'base.html.twig' %}

{# {% block title %}Mon blog, yeah!{% endblock %} #}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% block nav %} {{parent()}} {% endblock %}

<div class="container justify-content-between d-flex flex-wrap">
   
       {% for article in articles %}
       <div class="col-4 h-full h-auto pe-5">
    <div class="card mb-5 h-full h-auto">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTVecIZatL6lcQydGbzjWBr-ExnDrMzxzyyCg&s" class="card-img-top" alt="...">
        <div class="card-body">
            <h2 class="card-title">{{ article.title }}</h2>
            <p class="card-text">{{ article.content}}</p>
            <p>Escrito el {{ article.createdAt | date('d/m/Y') }}</p>
                        <p><em>{{ article.category.name }}</em></p>

        </div>

    </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
